<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bin.myblog.dao.TypeMapper">

    <insert id="saveType" parameterType="com.bin.myblog.pojo.Type">
        insert into type (typename) values (#{typename})
    </insert>

    <select id="getTypeById" resultType="com.bin.myblog.pojo.Type" parameterType="java.lang.Long">
        select * from type where id = #{id}
    </select>

    <update id="updateType" parameterType="com.bin.myblog.pojo.Type">
        update type set typename = #{typename} where id = #{id}
    </update>

    <delete id="deleteType" parameterType="java.lang.Long">
        delete from type where id = #{id}
    </delete>

    <select id="listType" parameterType="int" resultType="com.bin.myblog.pojo.Type">
        select * from type limit #{startIndex} ,#{currentCount}
    </select>

    <select id="selectTypeCount" resultType="java.lang.Long">
        select count(*) from type
    </select>

    <select id="getTypeByName" resultType="com.bin.myblog.pojo.Type">
        select * from type where typename = #{typename}
    </select>

    <select id="getAllType" resultType="com.bin.myblog.pojo.Type">
        select * from type
    </select>

    <select id="countType" resultType="int">
        select count(*) from type
    </select>
</mapper>